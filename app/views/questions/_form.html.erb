<h1> <%= question_form_header(@question) %> </h1>
<%= form_with model: [@test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <div class="text-area">
    <%= form.label :question%>
    <%= form.text_area :body, id: :body, size: "30x5" %>
    <%= form.submit %>
    <%= link_to '<- Back', test_path(@question.test) %>
  </div>

<% end %>
